{
    "name": "aeon-php/calendar-rector",
    "type": "library",
    "description": "Rector rule to migrate from DateTimeInterface to Aeon DateTime",
    "keywords": ["calendar", "immutable", "rector", "automated refactoring"],
    "require": {
        "php": ">=7.4.2",
        "webmozart/assert": "^1.8",
        "aeon-php/calendar": "^0.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3",
        "rector/rector": "0.7.39"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Aeon\\": [
                "src/Aeon"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aeon\\Calendar\\Tests\\": "tests/Aeon/Calendar/Tests/"
        }
    },
    "scripts": {
        "build": [
            "@static:analyze",
            "@test"
        ],
        "test": [
            "phpunit"
        ],
        "static:analyze": [
            "tools/php-cs-fixer fix --dry-run"
        ],
        "cs:php:fix": "tools/php-cs-fixer fix"
    }
}
